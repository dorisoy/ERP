@{
    var id = ViewBag.ID;
    ViewBag.Title = "标记挂起";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <style>
        .tableinfo td {
            height: 20px;
            line-height: 20px;
        }
    </style>
}
<form id="ff" method="post" novalidate="novalidate">
    <input type="hidden" value="@id" id="hdnID" name="id" />
    <table id="tblAdd" class="tableinfo">
        <tr>
            <td>
                <span style="color:#ff0000;">*</span>输入挂起备注:
            </td>
        </tr>
        <tr>
            <td>
                <textarea id="txtHangRemark" name="hangRemark" class="textarea easyui-validatebox" style="width:400px; height:110px;" maxlength="200"></textarea>
            </td>
        </tr>
        <tr>
            <td style="text-align:center;">
                <a href="javascript:void(0);" class="button-oky" id="btnSave" iconcls="icon-ok">挂起</a>
                <a href="javascript:void(0);" class="button-cancel" iconcls="icon-cancel" id="btnClose">取消</a>
            </td>
        </tr>
    </table>
</form>
@section bottom{
    <script src="~/Areas/Warehouse/ViewJs/Hang.js"></script>
}
