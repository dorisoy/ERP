@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{}

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',height:113" id="topdiv">
        <div class="toolbar" id="toolbar">
            <a href="javascript:void(0);" class="refresh" id="refresh"><span></span>刷新</a>
            <a href="javascript:void(0);" class="add" id="add"><span></span> 添加预售</a>
            <a href="javascript:void(0);" id="del"><span></span>取消预售</a>
            <a href="javascript:void(0);" id="refreshCurrentPage" style="display:none;"><span></span>刷新当前页</a>
        </div>
        <div class="searchpro" id="searchpro">
            <form id="ff" method="post">
                <select id="keyWordType" name="keyWordType" class="easyui-combobox" data-options="height:30,width:100,editable:false">
                    <option value="">关键字类型</option>
                    <option value="商品名称">商品名称</option>
                    <option value="商品编码" selected>商品编码</option>
                    <option value="商品货号">商品货号</option>
                    <option value="商品SKU码">商品SKU码</option>
                    <option value="商品条码">商品条码</option>
                </select>
                <input type="text" id="txtKeyWord" value="" style="width:150px;">
                <label>分类：</label><input id="category" name="category" class="easyui-combotree" data-options="url:'/Products/Category/JsonTree?ram='+Math.random(),method:'get',height:30,width:130">
                <label>品牌：</label><select id="brand" name="brand" class="easyui-combobox" data-options="height:30,width:130"></select>
                <label>是否扣减：</label><select id="bookingModel" class="easyui-combobox" name="deduction" data-options="height:30,width:82">
                    <option value="-1">不限</option>
                    <option value="0">扣减</option>
                    <option value="1">不扣减</option>
                </select>
                <input type="button" id="btnSearch" value="搜索" class="button">
                <input type="button" value="清空条件" class="button-rest" onclick="javascript:location.reload();">
            </form>
        </div>

    </div>
    <div data-options="region:'center',border:false" class="p0lr22">
        <table id="grid" class="easyui-datagrid" title="" data-options="singleSelect:false,collapsible:true,method:'get'"></table>
    </div>
</div>

@section bottom{
    <script src="~/Areas/Warehouse/ViewJs/BookingProductsSkuInfoList.js"></script>
}