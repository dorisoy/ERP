@using PaiXie.Data
@{
    var SyscodeType = ViewBag.SyscodeType as SyscodeType;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    @section head{
    }
    <div  style="padding:20px" >     
        <form id="ff" method="post" novalidate="novalidate">
            <input type="hidden" value="@SyscodeType.ID" id="ID" name="ID" />        
                <table id="tblAdd" class="tableinfo">
                    <tr>
                        <th><label for="Name">项目名称：</label></th>
                        <td>
                            <input style="width:120px;" value="@SyscodeType.Name" class="easyui-validatebox" type="text" id="Name" name="Name" data-options="required:true,validType:'length[1,10]'" />
                            10个字以内   </td>
                    </tr>
                    <tr>
                        <th><label for="Code">项目代码：</label></th>
                        <td>
                            <input style="width:120px;"

                                  
                                       @if (SyscodeType.ID > 0) {
                                            @("readonly='readonly'") 
                                       }
                                     
                                  
                                 
                                   value="@SyscodeType.Code" class="easyui-validatebox" type="text" id="Code" name="Code" data-options="required:true,validType:['length[1,5]','code']" />
                            5位英文或数字 <label id="lblpcode" style="color:red;"></label>   </td>
                        </tr>        
                </table>         
            <br />
			<div class="textcenter">
				<a href="javascript:void(0)" class="button-oky" id="btnSave" iconcls="icon-ok">确定</a>
				<a href="javascript:void(0)" class="button-cancel" iconcls="icon-cancel" id="btnClose">取消</a>
			</div>
        </form>
    </div>       
@section bottom{
<script src="~/Areas/Sys/ViewJs/Editcodetype.js"></script>
}  