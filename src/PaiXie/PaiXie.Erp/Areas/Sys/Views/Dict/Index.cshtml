                <label id="lblpname"></label>

                <a href="#" plain="true" class="easyui-linkbutton" icon="icon-add" title="新增" id="codeadd">新增</a>
                <a href="#" plain="true" class="easyui-linkbutton" icon="icon-remove" title="禁用/启用" id="codedelete">禁用/启用</a>
            </div>
        </div>
        <div data-options="region:'center'" id="test">
            <input id="code" type="hidden" value="0" />
            <table title="" ></table>

        </div>
    </div>
</div>
