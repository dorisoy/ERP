<div data-options="region:'center'  " class="easyui-layout">
    <input id="codetype" type="hidden" value="" />
    <input id="codetypename" type="hidden" value="" />



    <div data-options="region:'west'" style="width: 180px">
        <div class="left_zdseach">
            <input style="width:100px;" value="" type="text"
                   id="txtname" name="txtname" />
            <input type="button" value="搜索" id="btnSave" />
        </div>
       

        <div title="字典类别" style="width: 100%; height:100%;" class="easyui-panel" data-options="title: '字典类别', iconCls: 'icon-node_tree',fit : true">
            @*height: $(window).height() - 4*@
            <ul data-bind="easyuiTree:tree" id="tree"></ul>
        </div>

    </div>
    <div data-options="region:'center' ,fit : true">
        <div data-options="region:'north'" style="height:30px">
            <div class="z-toolbar" style="margin-top:0px;">
                <input id="refreshcode" type="hidden" value="" />
                @*<a href="#" plain="true" class="easyui-linkbutton" icon="icon-reload" title="刷新" id="refreshcode">刷新</a>*@
